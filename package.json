{
  "name": "m3u-tv",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.5.0",
  "resolutions": {
    "js-yaml": "^3.14.2",
    "min-document": "^2.19.1",
    "logkitty": "^0.7.1",
    "node-fetch": "^2.6.7",
    "ws": "^8.17.1"
  },
  "scripts": {
    "dev": "yarn workspace @m3u-tv/expo-app start",
    "dev:android": "yarn workspace @m3u-tv/expo-app android",
    "dev:ios": "yarn workspace @m3u-tv/expo-app ios",
    "dev:web": "yarn workspace @m3u-tv/expo-app web",
    "dev:vega": "yarn workspace @m3u-tv/vega start",
    "build:all": "yarn workspaces foreach -pt run build",
    "build:vega": "yarn workspace @m3u-tv/vega run build",
    "build:vega:debug": "yarn workspace @m3u-tv/vega run build:debug",
    "test:all": "yarn workspaces foreach -pt run test",
    "lint:all": "yarn workspaces foreach -pt run lint",
    "typecheck": "yarn workspaces foreach -pt run typecheck",
    "clean:all": "yarn workspaces foreach run clean && rm -rf node_modules",
    "bootstrap": "yarn install && yarn build:all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.3.3"
  }
}
